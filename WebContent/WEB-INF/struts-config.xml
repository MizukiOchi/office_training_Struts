<?xml version="1.0" encoding="Shift_JIS" ?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
"http:struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<!-- (1)アクション・フォームBeanの指定 -->
	<form-beans>
		<form-bean name="OmikujiResultsForm" type="struts.OmikujiResultsForm"/>
		<form-bean name="HarfMonthResultsForm" type="struts.HarfMonthResultsForm"/>
		<form-bean name="SameBirthdayForm" type="struts.SameBirthdayForm"/>
	</form-beans>

<!-- (3)アクション・クラスの振舞いを指定 -->
<action-mappings>
	<action path="/fortuneResults" type="struts.BirthdayAction" name="OmikujiResultsForm" scope="session">
		<forward name="success" path="/pages/OmikujiResults.jsp"/>
		<forward name="fail" path="/pages/InputBirthday.jsp"/>
	</action>
	<action path="/hmResults" type="struts.HarfMonthResultsAction" name="HarfMonthResultsForm" scope="session">
		<forward name="success" path="JharfMonthResults"/>
	</action>
	<action path="/sbResults" type="struts.SameBirthdayAction" name="SameBirthdayForm" scope="session">
		<forward name="success" path="JsameBirthday"/>
	</action>
</action-mappings>


<!-- (4)メッセージ・リソース・ファイルの指定 -->
<message-resources parameter="MessageResources"/>

</struts-config>

